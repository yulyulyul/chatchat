<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.chatchat.SettingChatRoom" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/star" />
    
    <TextView
        android:id="@+id/SetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dip"
        android:text="대화방 제목"
        android:textColor="#1E76A7"
         />
    
    </LinearLayout>
    

    <EditText
        android:id="@+id/Et_SetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dip"
        android:hint="대화방 제목을 입력해주세요."
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/MaxPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dip"
        android:text="최대인원"
        android:textColor="#1E76A7"
         />

        </LinearLayout>
    
    <EditText
        android:id="@+id/Et_MaxPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="최대인원을 설정해주세요."
        android:inputType="number"
        android:ems="10" />
    
    
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

         <Button
             android:id="@+id/pbtn"
             android:layout_width="100dp"
             android:layout_height="40dp"
             android:background="@drawable/button_background"
             android:textColor="#ffffff"
             android:text="확인" />

         <Button
             android:id="@+id/nbtn"
             android:layout_width="100dp"
             android:layout_height="40dp"
             android:layout_marginLeft="20dp"
             android:background="@drawable/button_background"
             android:textColor="#ffffff"
             android:text="취소" />
         
    </LinearLayout>

</LinearLayout>
